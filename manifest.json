{
  "manifest_version": 3,
  "name": "PhishGuard",
  "version": "0.1.0",
  "description": "Protect yourself from phishing attempts by analyzing suspicious URLs or email content",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "public/icons/icon16.png",
      "48": "public/icons/icon48.png",
      "128": "public/icons/icon128.png"
    }
  },
  "icons": {
    "16": "public/icons/icon16.png",
    "48": "public/icons/icon48.png",
    "128": "public/icons/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab"
  ]
}